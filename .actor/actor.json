{
	"actorSpecification": 1,
	"name": "wc-scraper",
	"title": "WebsiteClosers scraper",
	"description": "Scrape information from WebsiteClosers.",
	"version": "0.0",
	"meta": {
		"templateId": "js-start",
		"model": "<FILL-IN-MODEL>"
	},
	"input": "./input_schema.json",
	"dockerfile": "../Dockerfile",
	"storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "Dataset",
            "description": "",
            "views": {
                "products": {
                    "title": "Overview",
                    "description": "It can take about one minute until the first results are available.",
                    "transformation": {
                        "fields": [
                            "image",
                            "title",
							"desc",
                            "rawprice",
							"numprice",
                            "rawprofit",
							"numprofit",
                            "available",
                            "broker",
                            "timestamp",
                            "link"
                        ]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "image": {
                                "label": "Reference image",
                                "format": "image"
                            },
                            "title": {
                                "label": "Business Name",
                                "format": "text"
                            },
							"desc": {
								"label": "Description",
								"format": "text"
							},
                            "rawprice": {
								"label": "Asking Price",
                                "format": "text"
                            },
							"numprice": {
								"label": "Numeric Asking Price",
								"format": "number"
							},
                            "rawprofit": {
								"label": "Cash Flow",
                                "format": "text"
                            },
							"numprofit": {
								"label": "Numeric Cash Flow",
								"format" : "number"
							},
                            "available": {
								"label": "Available",
                                "format": "boolean"
                            },
                            "broker": {
								"label": "Broker Name",
                                "format": "text"
                            },
                            "timestamp": {
								"label": "Scraped TimeStamp",
                                "format": "text"
                            },
							"link": {
								"label": "Offer Link",
								"format": "link"
							}
                        }
                    }
                }
            }
        }
    }
}
